# Disable the startup message
startup_message off

# Set a large scrollback buffer
defscrollback 32000

# # Always start `screen` with UTF-8 enabled (`screen -U`)
defutf8 on

hardstatus on
hardstatus alwayslastline
hardstatus string "%{.kw}%-w%{= kR}(%{r}%n %t%{-}%{= kR})%?%{= .kw}%+w%? %{.kw}%=%c %d/%m/%Y" #B&W & date&time

# key binding
escape ^Jj

# coloring
term xterm-256color

